
@{
	ViewBag.Title = "Edit_SanPham";
	Layout = "~/Areas/ADMIN/Views/Shared/_AdmiLayout.cshtml";
}
@using api_shop_ban_thuoc_btl_cnltth_2020.Models
@model SANPHAM

<link href="~/Content/Admin/css/bootstrap.min.css" rel="stylesheet">
<link href="~/Content/Admin/css/datepicker3.css" rel="stylesheet">
<link href="~/Content/Admin/css/bootstrap-table.css" rel="stylesheet">
<link href="~/Content/Admin/css/styles.css" rel="stylesheet">

<!--Icons-->
<script src="~/Content/Admin/js/lumino.glyphs.js"></script>

<script src="~/Content/Admin/js/jquery-1.11.1.min.js"></script>
<script src="~/Content/Admin/js/bootstrap.min.js"></script>
<script src="~/Content/Admin/js/bootstrap-table.js"></script>
@section dangnhap{
	@Html.Action("_DangNhap")
}
<div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
	<form role="search" action="/ADMIN/Admin/TimKiemSP" method="post">
		<div class="form-group">
			<input type="text" name="search" class="form-control" placeholder="Search">
		</div>
	</form>
	<ul class="nav menu">
		<li><a href="/ADMIN/Admin/Index"><svg class="glyph stroked dashboard-dial"><use xlink:href="#stroked-dashboard-dial"></use></svg> Home</a></li>
		<li><a href="/ADMIN/Admin/Users"><svg class="glyph stroked male user "><use xlink:href="#stroked-male-user" /></svg>Quản lý thành viên</a></li>
		<li><a href="/ADMIN/Admin/DanhMuc"><svg class="glyph stroked open folder"><use xlink:href="#stroked-open-folder" /></svg>Quản lý danh mục</a></li>
		<li class="active"><a href="/ADMIN/Admin/SanPham"><svg class="glyph stroked bag"><use xlink:href="#stroked-bag"></use></svg>Quản lý thuốc</a></li>
		<li><a href="/ADMIN/Admin/DonHang"><svg class="glyph stroked two messages"><use xlink:href="#stroked-two-messages" /></svg> Quản lý đơn hàng</a></li>
	</ul>

</div>


<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
	<div class="row">
		<ol class="breadcrumb">
			<li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
			<li><a href="">Quản lý sản phẩm</a></li>
			<li class="active">@Model.MaSP</li>
		</ol>
	</div>
	<!--/.row-->

	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Sản phẩm: @Model.TenSP</h1>
		</div>
	</div>
	<!--/.row-->
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-body">
					<form role="form" method="post" enctype="multipart/form-data" action="/ADMIN/Admin/Edit_SanPham">
						<div class="col-md-6">
							<div class="form-group">
								<label>Mã thuốc</label>
								<input type="text" name="MaSP" required class="form-control" value="@Model.MaSP" readonly>
							</div>
							<div class="form-group">
								<label>Tên thuốc</label>
								<input type="text" name="TenSP" required class="form-control" value="@Model.TenSP">
							</div>
							<div class="form-group">
								<label>Công Dụng</label>
								<input type="text" name="CongDung" value="@Model.CongDung" class="form-control">
							</div>
							<div class="form-group">
								<label>Thành Phần</label>
								<input type="text" name="ThanhPhan" value="@Model.ThanhPhan" class="form-control">
							</div>
							<div class="form-group">
								<label>Dạng Thuốc</label>
								<input type="text" name="DangThuoc" value="@Model.DangThuoc" class="form-control">
							</div>
							<div class="form-group">
								<label>Liều Lượng</label>
								<input type="text" name="LieuLuong" value="@Model.LieuLuong" class="form-control">
							</div>
							<div class="form-group">
								<label>Danh Mục</label>
								<input type="text" name="MaDM" value="@Model.MaDM" class="form-control">
							</div>
						</div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Hình ảnh sản phẩm</label>
                                <br>
                                <div>
                                    <img style="text-align: center" width="130" height="180" src="~/Content/Images/@Model.HinhAnh" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Hình ảnh sản phẩm</label>
                                <input type="file" name="file">
                                <br>
                            </div>
                            <div class="form-group">
                                <label>Đơn vị</label>
                                <input type="text" name="DonVi" value="@Model.DonVi" class="form-control">
                            </div>
                            @*<div class="form-group">
								<label>Số Lượng Tồn</label>
								<input type="number" name="SoLuongTon" value="@Model.SoLuongTon" class="form-control">
							</div>*@
                            <div class="form-group">
                                <label>Đơn Giá</label>
                                <input type="number" name="GiaBan" value="@Model.GiaBan" class="form-control">
                            </div>
                            <button type="submit" name="sbm" class="btn btn-primary">Cập nhật</button>
                            <button type="reset" class="btn btn-default">Làm mới</button>

                        </div>
					</form>
				</div>

			</div>
		</div>
		<!-- /.col-->
	</div>
	<!-- /.row -->

</div>
<!--/.main-->
